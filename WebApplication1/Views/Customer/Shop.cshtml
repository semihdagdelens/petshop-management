@{
    ViewData["Title"] = "M√º≈üteri Alƒ±≈üveri≈üi";
}
<div class="container mt-4">
    <h2 class="mb-3 text-success">üõçÔ∏è M√º≈üteri Alƒ±≈üveri≈üi</h2>
    <p class="text-muted mb-4">Ho≈ü geldin: <strong>@ViewBag.CustomerName</strong></p>

    <form method="get" asp-action="Shop" class="row g-2 align-items-end mb-4">
        <div class="col-md-6">
            <label class="form-label fw-bold">Maƒüaza Se√ß</label>
            <select name="storeId" class="form-select">
                <option value="">-- Maƒüaza Se√ßin --</option>
                @if (ViewBag.Stores != null)
                {
                    foreach (System.Data.DataRow row in (ViewBag.Stores as System.Data.DataTable).Rows)
                    {
                        var isSelected = ViewBag.SelectedStoreId != null && (int)ViewBag.SelectedStoreId == (int)row["LocationID"];
                        <option value="@row["LocationID"]" selected="@(isSelected ? "selected" : null)">@row["Name"]</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-success w-100">√úr√ºnleri G√∂r</button>
        </div>
    </form>

    @if (TempData["Message"] != null)
    {
        var type = TempData["Type"]?.ToString() ?? "info";
        <div class="alert alert-@type">@TempData["Message"]</div>
    }

    @if (ViewBag.Products != null && ViewBag.SelectedStoreId != null)
    {
        var table = ViewBag.Products as System.Data.DataTable;
        if (table.Rows.Count == 0)
        {
            <div class="alert alert-warning">Se√ßili maƒüazada √ºr√ºn bulunamadƒ±.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-success">
                        <tr>
                            <th>√úr√ºn</th>
                            <th>Tip</th>
                            <th>Stok</th>
                            <th>Fiyat</th>
                            <th>Adet</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (System.Data.DataRow row in table.Rows)
                        {
                            var isAnimal = row["ProductType"].ToString() == "Animal";
                            var maxQty = Convert.ToInt32(row["Stock"]);
                            <tr>
                                <td>@row["DisplayName"]</td>
                                <td>@row["ProductType"]</td>
                                <td>@row["Stock"]</td>
                                <td>@row["StandardPrice"] ‚Ç∫</td>
                                <td style="width:120px;">
                                    <input type="number" name="qty" form="buy-@(row["ProductID"])" class="form-control" min="1" max="@maxQty" value="1" @(isAnimal ? "readonly" : "") />
                                </td>
                                <td style="width:140px;">
                                    <form asp-action="Purchase" method="post" id="buy-@(row["ProductID"])">
                                        <input type="hidden" name="storeId" value="@ViewBag.SelectedStoreId" />
                                        <input type="hidden" name="productId" value="@row["ProductID"]" />
                                        <button type="submit" class="btn btn-sm btn-success w-100">Satƒ±n Al</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    }
</div>
