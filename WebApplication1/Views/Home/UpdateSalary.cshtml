@{
    ViewData["Title"] = "Maaş Zammı";
}
<div class="container mt-4 col-md-6">
    <div class="card shadow">
        <div class="card-header bg-success text-white fw-bold">💰 Maaş Güncelleme</div>
        <div class="card-body">
            <form asp-action="UpdateSalary" method="post">
                <div class="mb-3"><label>Çalışan ID:</label><input type="number" name="EmployeeID" class="form-control" required /></div>
                <div class="mb-3">
                    <label>Zam Oranı (%):</label><input type="number" step="0.01" name="Percentage" class="form-control" required value="10" />
                    <small class="text-danger">Test: Eksi değer (-10) girersen "Maaş düşürülemez" hatası verir!</small>
                </div>
                <button type="submit" class="btn btn-success w-100">Maaşı Güncelle</button>
            </form>
        </div>
    </div>
</div>