@{
    ViewData["Title"] = "Mal Kabul";
}
<div class="container mt-4 col-md-7">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-@TempData["Type"] alert-dismissible fade show shadow-sm border-0 border-start border-5 border-@TempData["Type"]">
            <i class="fas fa-info-circle me-2"></i> @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger shadow-sm border-0 border-start border-5 border-danger">
            <i class="fas fa-triangle-exclamation me-2"></i> @ViewBag.Error
        </div>
    }

    <div class="card shadow">
        <div class="card-header bg-danger text-white fw-bold">📦 Depo Mal Kabul</div>
        <div class="card-body">
            <form asp-action="ReceiveSupply" method="post">
                <div class="mb-3">
                    <label class="form-label fw-bold">Tedarikçi</label>
                    <select name="VendorID" class="form-select" required>
                        <option value="">-- Tedarikçi Seçin --</option>
                        @if (ViewBag.Vendors != null)
                        {
                            foreach (System.Data.DataRow row in (ViewBag.Vendors as System.Data.DataTable).Rows)
                            {
                                <option value="@row["VendorID"]">@row["FullName"]</option>
                            }
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Depo (Warehouse)</label>
                    <select name="WarehouseID" class="form-select" required>
                        <option value="">-- Depo Seçin --</option>
                        @if (ViewBag.Warehouses != null)
                        {
                            foreach (System.Data.DataRow row in (ViewBag.Warehouses as System.Data.DataTable).Rows)
                            {
                                <option value="@row["LocationID"]">@row["Name"]</option>
                            }
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Ürün (Goods)</label>
                    <select name="ProductID" class="form-select" required>
                        <option value="">-- Ürün Seçin --</option>
                        @if (ViewBag.Goods != null)
                        {
                            foreach (System.Data.DataRow row in (ViewBag.Goods as System.Data.DataTable).Rows)
                            {
                                <option value="@row["ProductID"]">@row["DisplayName"]</option>
                            }
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Miktar (Adet)</label>
                    <input type="number" name="Qty" class="form-control" required value="10" min="1" />
                </div>
                <div class="mb-4">
                    <label class="form-label fw-bold">Toplam Hacim (Birim)</label>
                    <input type="number" name="Size" class="form-control" required value="100" min="1" />
                </div>
                <button type="submit" class="btn btn-danger w-100">Malı Kabul Et</button>
            </form>
        </div>
    </div>
</div>
