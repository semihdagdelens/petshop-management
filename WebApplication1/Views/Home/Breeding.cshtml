@{
    ViewData["Title"] = "Üretim ve Veteriner";
}
<div class="container mt-4">
    <h2 class="mb-4 text-primary">🐣 Üretim ve Veteriner Hizmetleri</h2>

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow border-primary mb-3">
                <div class="card-header bg-primary text-white fw-bold">🏠 Yeni Yuva (sp_AddNewBreedingNest)</div>
                <div class="card-body">
                    <form asp-action="AddNest" method="post">
                        <div class="mb-2"><label>Üretim Tesis ID:</label><input type="number" name="UnitID" class="form-control" required value="7" /></div>
                        <div class="mb-2"><label>Bakıcı ID:</label><input type="number" name="BreederID" class="form-control" required value="1" /></div>
                        <div class="mb-3"><label>Tür:</label><input type="text" name="Type" class="form-control" placeholder="Canary" required /></div>
                        <button type="submit" class="btn btn-primary w-100">Yuvayı Kur</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow border-info mb-3">
                <div class="card-header bg-info text-white fw-bold">🦜 Hayvan Kaydı (sp_RegisterNewAnimal)</div>
                <div class="card-body">
                    <form asp-action="RegisterAnimal" method="post">
                        <div class="mb-2"><input type="text" name="AnimalType" class="form-control" placeholder="Tür (Bird)" required /></div>
                        <div class="mb-2"><input type="text" name="BreedType" class="form-control" placeholder="Cins (Parrot)" required /></div>
                        <div class="mb-2">
                            <select name="Gender" class="form-select"><option value="M">Erkek (M)</option><option value="F">Dişi (F)</option></select>
                        </div>
                        <div class="mb-2"><label>D. Tarihi:</label><input type="date" name="BirthDate" class="form-control" required /></div>
                        <div class="mb-2"><label>Yuva ID:</label><input type="number" name="NestID" class="form-control" required /></div>
                        <div class="mb-3"><label>Fiyat:</label><input type="number" name="Price" class="form-control" required /></div>
                        <button type="submit" class="btn btn-info text-white w-100">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow border-danger mb-3">
                <div class="card-header bg-danger text-white fw-bold">🚑 Sağlık Kontrolü (sp_UpdateAnimalHealth)</div>
                <div class="card-body">
                    <form asp-action="UpdateHealth" method="post">
                        <div class="mb-3"><label>Hayvan ID (Product ID):</label><input type="number" name="AnimalID" class="form-control" required /></div>
                        <div class="mb-3">
                            <label>Yeni Durum:</label>
                            <select name="Status" class="form-select">
                                <option value="Healthy">Sağlıklı</option>
                                <option value="Sick">Hasta</option>
                                <option value="Injured">Yaralı</option>
                                <option value="Treatment">Tedavide</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-danger w-100">Durumu Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow border-success mt-4">
        <div class="card-header bg-success text-white fw-bold">🐾 BreedingUnit İçindeki Hayvanlar & Yuva Bilgileri</div>
        <div class="card-body">
            <form method="get" asp-action="Breeding" class="row g-2 align-items-end mb-3">
                <div class="col-md-6">
                    <label class="form-label fw-bold">BreedingUnit Seç</label>
                    <select name="unitId" class="form-select">
                        <option value="">Tümü</option>
                        @if (ViewBag.BreedingUnits != null)
                        {
                            foreach (System.Data.DataRow row in (ViewBag.BreedingUnits as System.Data.DataTable).Rows)
                            {
                                var isSelected = ViewBag.SelectedUnitId != null && (int)ViewBag.SelectedUnitId == (int)row["LocationID"];
                                <option value="@row["LocationID"]" selected="@(isSelected ? "selected" : null)">@row["Name"]</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-success w-100">Listele</button>
                </div>
            </form>

            @if (ViewBag.NestAnimals != null)
            {
                var table = ViewBag.NestAnimals as System.Data.DataTable;
                if (table.Rows.Count == 0)
                {
                    <div class="alert alert-warning mb-0">Gösterilecek kayıt bulunamadı.</div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle">
                            <thead class="table-success">
                                <tr>
                                    <th>Ünite</th>
                                    <th>Yuva ID</th>
                                    <th>Yuva Türü</th>
                                    <th>Bakıcı</th>
                                    <th>Hayvan ID</th>
                                    <th>Tür</th>
                                    <th>Cins</th>
                                    <th>Cinsiyet</th>
                                    <th>Doğum</th>
                                    <th>Sağlık</th>
                                    <th>Fiyat</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (System.Data.DataRow row in table.Rows)
                                {
                                    <tr>
                                        <td>@row["UnitName"] (@row["UnitID"])</td>
                                        <td>@row["NestID"]</td>
                                        <td>@row["NestType"]</td>
                                        <td>@row["BreederName"] (@row["ManagedByBreederID"])</td>
                                        <td>@row["AnimalID"]</td>
                                        <td>@row["AnimalType"]</td>
                                        <td>@row["BreedType"]</td>
                                        <td>@row["Gender"]</td>
                                        <td>@Convert.ToDateTime(row["BirthDate"]).ToString("yyyy-MM-dd")</td>
                                        <td>@row["HealthStatus"]</td>
                                        <td>@row["StandardPrice"] ₺</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            }
        </div>
    </div>
</div>
